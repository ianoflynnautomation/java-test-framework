<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Async console appender with JSON output -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <fieldNames>
                <timestamp>@timestamp</timestamp>
                <message>message</message>
                <thread>threadName</thread>
                <level>logLevel</level>
                <logger>loggerName</logger>
                <stackTrace>stackTrace</stackTrace>
                <version>[ignore]</version>
            </fieldNames>
            <customFields>
                {
                "service_name": "api-testing-framework",
                "environment": "${spring.profiles.active:-development}"
                }
            </customFields>
            <includeMdc>true</includeMdc>
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
            <includeMdcKeyName>correlationId</includeMdcKeyName>
            <includeMdcKeyName>test_id</includeMdcKeyName>
            <includeMdcKeyName>test_name</includeMdcKeyName>
            <includeMdcKeyName>test_stage</includeMdcKeyName>
            <includeContext>false</includeContext>
        </encoder>
    </appender>

    <!-- OTLP appender for OpenTelemetry -->
    <appender name="OTLP" class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender">
        <captureMdcAttributes>*</captureMdcAttributes>
        <captureContextDataAttributes>true</captureContextDataAttributes>
    </appender>

    <!-- Async file appender for JSON logs -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service_name":"api-testing-framework","environment":"${spring.profiles.active:-development}"}</customFields>
            <includeMdc>true</includeMdc>
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
            <includeMdcKeyName>correlationId</includeMdcKeyName>
            <includeMdcKeyName>test_id</includeMdcKeyName>
            <includeMdcKeyName>test_name</includeMdcKeyName>
            <includeMdcKeyName>test_stage</includeMdcKeyName>
        </encoder>
    </appender>

    <!-- Async appender for performance -->
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE_JSON"/>
        <appender-ref ref="FILE_JSON"/>
        <queueSize>500</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="ASYNC"/>
        <appender-ref ref="OTLP"/>
    </root>

    <!-- Specific logger levels -->
    <logger name="solutions.bjjeire.api" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC"/>
        <appender-ref ref="OTLP"/>
    </logger>
    <logger name="org.springframework" level="INFO"/>
    <logger name="reactor.netty" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="com.jayway.jsonpath" level="INFO"/>
    <logger name="io.opentelemetry" level="DEBUG"/>
</configuration>